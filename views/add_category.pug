extends layout

block variables
	-BLOGPAGE = true;
	//- -ARTICLES = true;

block content
	// Navbar
	include ./includes/navbar
	.spacer
	.container
		.row
			.col-lg-8.col-md-10.mx-auto
				h1= title
				
				if errors
					ul.errors
					each error in errors
						li.alert.alert-danger #{error.msg}

				form(method="POST", action="/blog/manage/categories/add")
					.form-group
						label Title
						input.form-control(name="title", type="text")
					.form-group
						label Description
						textarea.form-control(rows="10", name="description", id="body")
							if description
								=description
					input.btn.btn-primary(name="submit", type="submit", value="Save")
					a.btn.btn-outline-secondary(href="/blog/manage/categories") Back

	





	hr
	// Footer
	include ./includes/footer