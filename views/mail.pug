extends layout

block content
	h1= title
	p Welcome to #{title}
	form(method="POST", action="mail/send")
		.form-group
			label(for="name") Name
			input.form-control(type="text", id="name", name="name", placeholder="Enter your name")
		.form-group
			label(for="email") Email
			input.form-control(type="text", id="email", name="email", placeholder="Enter your email")
		.form-group
			label(for="message") Message
			textarea.form-control(rows="10", id="message", name="message", placeholder="Enter your message")
		input.btn.btn-primary(type="submit", value="Send")